<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardDay"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/teal_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Top Header: Day Info and Status -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Day Name and Date -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentStart="true">

                <TextView
                    android:id="@+id/tvDayName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wednesday"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/teal_dark"/>

                <TextView
                    android:id="@+id/tvDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="18 Dec"
                    android:textSize="13sp"
                    android:textColor="#888888"/>
            </LinearLayout>

            <!-- Status Icons Group (Right Side) -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true">

                <!-- Modern Today Badge -->
                <TextView
                    android:id="@+id/tvTodayBadge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TODAY"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:background="@color/teal_main"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="4dp"
                    android:visibility="gone"
                    android:layout_marginEnd="12dp"
                    android:letterSpacing="0.1"/>

                <ImageView
                    android:id="@+id/ivStatus"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/checkbox_off_background"
                    app:tint="@android:color/darker_gray" />
            </LinearLayout>
        </RelativeLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F0F0F0"
            android:layout_marginVertical="12dp"/>

        <!-- Routine Details -->
        <TextView
            android:id="@+id/tvRoutineName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rest day"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/teal_dark" />

        <TextView
            android:id="@+id/tvExercisePreview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Tap to assign a routine"
            android:textSize="13sp"
            android:textColor="#666666"
            android:maxLines="1"
            android:ellipsize="end" />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>