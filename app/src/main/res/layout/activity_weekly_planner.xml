<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/teal_background"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Weekly Planner"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/teal_dark"
        android:layout_marginBottom="16dp"
        android:layout_gravity="center_horizontal"/>

    <!-- Week Strip -->
    <LinearLayout
        android:id="@+id/layoutWeekStrip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="16dp">
        <!-- Days will be added dynamically here -->
    </LinearLayout>

    <TextView
        android:id="@+id/tvTrainingSummary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 training days this week"
        android:textSize="14sp"
        android:textColor="@color/teal_main"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"
        android:layout_gravity="center_horizontal"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/containerDays"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!-- Day rows inflated here -->
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <Button
        android:id="@+id/btnBackToDashboard"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Back to Dashboard"
        android:backgroundTint="@color/teal_main"
        android:textColor="@android:color/white"
        android:layout_marginTop="16dp"/>

</LinearLayout>